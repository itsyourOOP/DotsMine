[module/player-mpris-simple]
type = custom/script
exec = ~/.config/polybar/config-files/mpris.sh
interval = 0.5
format = <label>
label = %output:0:70%
label-foreground = ${colors.fg}
format-prefix = "ðŸŽ§ "
#format-prefix-padding-left = 1
#format-prefix-padding-right = 1
